{
  "name": "@nearform/cijul",
  "version": "0.1.0",
  "description": "The utility library for CSS-in-JS",
  "main": "src/index.js",
  "scripts": {
    "lint": "eslint src/**",
    "test": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nearform/cijul.git"
  },
  "author": "NearForm",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/nearform/cijul/issues"
  },
  "homepage": "https://github.com/nearform/cijul#readme",
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/preset-env": "^7.3.1",
    "babel-eslint": "^9.0.0",
    "babel-jest": "^24.1.0",
    "eslint": "^5.13.0",
    "eslint-config-prettier": "^4.0.0",
    "eslint-config-prettier-standard": "^2.0.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "husky": "^1.3.1",
    "jest": "^24.1.0",
    "lint-staged": "^8.1.4",
    "prettier": "^1.16.4"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ]
  },
  "eslintConfig": {
    "extends": [
      "prettier-standard"
    ],
    "overrides": [
      {
        "files": [
          "*.test.js"
        ],
        "env": {
          "jest": true
        }
      }
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm test -- -o"
    }
  },
  "lint-staged": {
    "*.js": "npm run lint"
  }
}
